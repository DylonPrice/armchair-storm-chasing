<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".End_Of_Day_Screen">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_end_of_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="edu.bsu.cs495.armchairstormchasing.EndOfDayActivity"
        >

        <LinearLayout
            android:id="@+id/layout_dayScoreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_dayScoreLabel"
                android:text="Today's Score: "
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"/>

            <TextView
                android:id="@+id/txt_dayScoreText"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_totalScoreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_dayScoreLayout">

            <TextView
                android:id="@+id/txt_totalScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Total Score: "
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txt_totalScoreText"
                android:text="0"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"/>

        </LinearLayout>




        <Button
            android:text="Begin Next Day"
            android:id="@+id/btn_nextDay"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_centerInParent="true"/>

        <Button
            android:text="Begin Next Day - Current Position"
            android:id="@+id/btn_nextDaySame"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_below="@id/btn_nextDay"/>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>